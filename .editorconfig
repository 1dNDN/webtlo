# https://editorconfig.org/

root = true

# Default settings for all project.
[*]
charset                  = utf-8
indent_style             = space
indent_size              = 4
tab_width                = 4
end_of_line              = lf
trim_trailing_whitespace = true
insert_final_newline     = true

[*.{yml,yaml}]
indent_size = 2

[docker/**]
insert_final_newline = false
